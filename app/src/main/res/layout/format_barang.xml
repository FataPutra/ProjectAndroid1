<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEEEEEEE"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#00ADB5"
        app:cardCornerRadius="20dp">
        <RelativeLayout
            android:id="@+id/relatif01"
            android:layout_width="wrap_content"
            android:background="#00ADB5"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/gambarbarang"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:src="@drawable/foto" />

            <TextView
                android:id="@+id/kodebarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/gambarbarang"
                android:text="kode"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/almendra_bold"
                android:layout_margin="5dp"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/namabarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/kodebarang"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/gambarbarang"
                android:fontFamily="@font/allerta"
                android:text="nama "
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hargabarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/namabarang"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/gambarbarang"
                android:fontFamily="@font/almendra_bold"
                android:text="Harga barang"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/satuanbarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/hargabarang"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/gambarbarang"
                android:text="satuan"
                android:textColor="@color/white" />




        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>